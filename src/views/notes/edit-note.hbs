<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">

    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{note.id}}?_method=PUT"
        method="POST">
        <input type="hidden"
          name="_method"
          value="PUT">
        <input type="text"
          name="title"
          class="form-control"
          placeholder="Titulo"
          value="{{note.title}}">
        <div class="form-group">
          <textarea name="descripcion"
            class="form-control">{{note.descripcion}}</textarea>
        </div>
        <div class="form-group"><button class="btn btn-primary btn-block"
            type="submit">Guardar</button></div>
      </form>
    </div>
  </div>
</div>
